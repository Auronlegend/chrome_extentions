{
  "name": "Safe Connection",
  "description": "Verifies that the connection is safe",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions" : [
    "http://*/*", 
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"],
        "run_at": "document_end"
    }
 ]
}
